<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class ="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method ="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" placeholder="title">
        </div>
        <div class="field">
            <label>Movie Name</label>
            <input type="text" name="blog[movieName]" placeholder="Movie Name">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" placeholder="Please provide a URL">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <input class="ui primary big button" type="submit">
        <a id="cancel" href="/blogs">Cancel</a>
    </form>
</div>

