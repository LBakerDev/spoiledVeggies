<% include ./partials/header %>

    <div class="ui main text container">
        <div class="jumbotron">
            <h1>Spoiled Veggies</h1>
            <p>A user driven platform for movie reviews</p>
        </div>
        <div class="ui top attached segment">
            <div class="ui divided items">
                <% blogs.forEach(function(blog){ %>
                    <div class="item">
                        <div class="image">
                            <img src="<%= blog.image %>">
                        </div>


                        <div class="content">
                            <a class="header" href="/blogs/<%=blog._id %>">
                                <%= blog.title %>
                            </a>
                            <div class="description">
                                <p>
                                    <%= blog.body && blog.body.substring(0,100) %>...
                                </p>
                                <!--<div class="meta">
                            <span><%= blog.created.toDateString() %></span>
                        </div>-->
                            </div>
                            <div class="extra">
                                <a class="ui floated basic violet button" href="/blogs/<%=blog._id%>">Read More</a>


                            </div>
                        </div>
                        
                    </div>
                    <div>

                    </div>
                    <% }) %>
            </div>
        </div>
    </div>


    







    <% include ./partials/footer %>

