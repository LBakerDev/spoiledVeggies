<% include ./partials/header %>

<div class = "ui main text container segment">
    <div class ="ui huge header">Edit <%= blog.title %></div>
    <form class="ui form" action="/blogs/<%= blog.id %>?_method=PUT" method ="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= blog.title %>">
        </div>
        <div class="field">
            <label>Movie Name</label>
            <input type="text" name="blog[movieName]" value="<%= blog.movieName %>">
        </div>
        
        
        <div class="field">
            <label>Image</label>
            <input type="text" name="blog[image]" value="<%= blog.image %>">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"><%= blog.body %></textarea>
        </div>
        <input class="ui primary big button" type="submit">
        <a id="cancel" href="/blogs/<%= blog._id %>">Cancel</a>
    </form>
</div>

