<% include ./partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">
            <%= blog.title %>
        </div>
        
        <div class="ui top attached segment">
            <div class="item">
                <img class="ui centered rounded image" src="<%= blog.image %>">
                <div class="content">
                    <span><%= blog.created.toDateString() %></span>
                </div>
                <div class="description">
                    <p><%= blog.body %></p>
                </div>
                <a class = "ui green button" href="/blogs/<%= blog._id %>/edit">Edit</a>
                <form id="delete" action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                
                    <button class ="ui red button">Delete</button>

                </form>
                
            </div>
            <a class="btn show" target ="_blank" href="http://www.fandango.com/search?q=<%= blog.movieName %>">Click Here for Showtimes</a>
            <a class="btn show" target ="_blank" href="http://www.imdb.com/find?ref_=nv_sr_fn&q=<%= blog.movieName %>&s=all">Click Here for IMDB Info</a>
        </div>
    </div>

    <% include ./partials/footer %>